<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <record model="ir.ui.view" id="partner_intructor_form_view">
        <field name="name">partner.intructor.form</field>
        <field name="model">res.partner</field>
        <field name="inherit_id" ref="base.view_partner_form"></field>
        
        <field name="arch" type="xml">
            <xpath expr="//notebook" position="inside">
                <page string="Academy">
                    <group>
                        <field name="instructor"/>
                        <field name="student"/>
                        <field name="sessions_ids">
                            <tree>
                                <field name="name"/>
                                <field name="start_date"/>
                                <field name="course_id"/>
                            </tree>
                        </field>
                    </group>
                </page>
            </xpath>

            <!--before, after, replace, inside, attributes-->
            <xpath expr="//page[@name='sales_purchases']//field[@name='user_id']" position="before">
                <field name="student"/>
            </xpath>

            <xpath expr="//page[@name='sales_purchases']//field[@name='user_id']" position="replace">
                <field name="user_id" string="Automatic Salesperson"/>
            </xpath>

            <xpath expr="//page[@name='sales_purchases']//field[@name='user_id']" position="attributes">
                <attribute name="attrs">{'readonly': True}</attribute>
            </xpath>

        </field>
    </record>
    
</odoo>
