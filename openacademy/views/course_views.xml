<?xml version="1.0" encoding="UTF-8"?>
<odoo>
  <data>

    <record model="ir.ui.view" id="openacademy_course_list_view">
      <field name="name">openacademy_course_list_view</field>
      <field name="model">openacademy.course</field>
      <field name="arch" type="xml">
        <tree>
          <field name="name"/>
          <field name="description"/>
          <field name="responsible_id"/>
        </tree>
      </field>
    </record>
    
    <record model="ir.ui.view" id="openacademy_course_form_view">
      <field name="name">openacademy_course_form_view</field>
      <field name="model">openacademy.course</field>
      <field name="arch" type="xml">
        <form>
          <sheet>
            <div class="oe_title">
                <h1>
                    <field name="name"/>
                </h1>
            </div>

            <group>
              <field name="responsible_id"/>
            </group>

            <notebook>
              <page string="Sessions">
                <field name="session_ids"/>
              </page>
  
              <page string="Description">
                <field name="description"/>
              </page>
              
              <page string="About">
                This is an example of notebook
              </page>
            </notebook>
            
          </sheet>
        </form>
      </field>
    </record>
    
    <record model="ir.ui.view" id="openacademy_course_search_view">
      <field name="name">course.search</field>
      <field name="model">openacademy.course</field>
      
      <field name="arch" type="xml">
        <search>
          <field name="name" string="By Name"/>
          <field name="description" string="By Description"/>
        </search>
      </field>
    </record>

    <record model="ir.actions.act_window" id="course_action">
      <field name="name">Courses</field>
      <field name="res_model">openacademy.course</field>
      <field name="view_mode">tree,form</field>
      <field name="help" type="html">
            <p class="oe_view_nocontent_create">Create your firts Course</p>
        </field>
    </record>

    <!-- menuitem de nivel 0 -->
    <menuitem name="OpenAcademy"
              id="main_openacademy_menu"
              web_icon="openacademy,static/description/icon.png"
              />
    <!-- menuitem de nivel 1 -->
    <menuitem name="Open Academy" id="openacademy_menu_1" parent="main_openacademy_menu"/>
    <!-- menuitem de nivel 2 -->
    <menuitem name="Courses" id="openacademy_menu_2" parent="openacademy_menu_1" action="course_action"/>
  </data>
</odoo>
















